---
const { title, subtitle } = Astro.props;
---

<div class="card">
    <h1 class="card__title">{title}</h1>
    <h2 class="card__subtitle">{subtitle}</h2>
</div>

<style lang="scss">
    .card{
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 350px;
        border-radius: 23px;
        border: 1.4px solid #50545d;

        &:hover{
            cursor: pointer;
        }

        &__title{
            width: 90%;
            font-size: 16px;
        }

        &__subtitle{
            width: 90%;
            color: #747474;
            font-size: 15px;
        }
    }
</style>