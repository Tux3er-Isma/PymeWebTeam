<style lang="scss">
    .section {
        margin: 0;
        width: 100vw;
        padding-top: 40px;
        padding-bottom: 40px;
        background: #121212;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(9.7px);
        -webkit-backdrop-filter: blur(9.7px);

        &__gallery {
            width: 100vw;

            &__marquee {
                display: flex;
                justify-content: center;
                width: 100vw;
                gap: 55px;
                // animation: marqueeAnimation 10s linear infinite; /* Ajusta la duración y velocidad según sea necesario */

                &--right {
                    margin-top: 38px;
                    // animation: marqueeAnimationRight 10s linear infinite; /* Ajusta la duración y velocidad según sea necesario */
                }

                &__divider {
                    display: none;
                }
            }
        }
    }

    @keyframes marqueeAnimation {
        0% {
            transform: translateX(100vw);
        }
        100% {
            transform: translateX(-100%);
        }
    }

    @keyframes marqueeAnimationRight {
        0% {
            transform: translateX(-100vw);
        }
        100% {
            transform: translateX(100%);
        }
    }

    @media only screen and (max-width: 480px) {
        .section {
            &__gallery {
                &__marquee {
                    flex-direction: column;

                    &__picture {
                        height: 30vh;
                    }

                    &__divider {
                        width: 100vw;
                        justify-content: space-around;
                        display: flex;
                    }
                }
            }
        }
    }
</style>

<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
        const imagesArr = document.querySelector(
            ".section__gallery__marquee",
        ).children;
        const imagesArr2 = document.querySelector(
            ".section__gallery__marquee--right",
        ).children;
        const $image2 = imagesArr[1];
        const $image3 = imagesArr[2];
        const $image4 = imagesArr2[0];
        const $image5 = imagesArr2[1];

        let imgArr = [];
        const $blurContainerArr = document.querySelectorAll(".picture");
        $blurContainerArr.forEach((picture) => {
            imgArr.push(picture.children[0]);
        });

        const loaded = (img) => {
            img.style.opacity = 1;
        };

        imgArr.forEach((img) => {
            if (img.complete) {
                loaded(img);
            } else {
                img.addEventListener("load", () => {
                    loaded(img);
                });
            }
        });

        if (window.screen.availWidth < 480) {
            $image2.style.display = "none";
            $image3.style.display = "none";
            $image4.style.display = "none";
            $image5.style.display = "none";
        }
    });
    document.addEventListener("astro:page-load", () => {
        const imagesArr = document.querySelector(
            ".section__gallery__marquee",
        ).childNodes;
        const imagesArr2 = document.querySelector(
            ".section__gallery__marquee--right",
        ).childNodes;
        const $image1 = imagesArr[3];
        const $image2 = imagesArr[5];
        const $image3 = imagesArr2[1];
        const $image4 = imagesArr2[3];

        let imgArr = [];
        const $blurContainerArr = document.querySelectorAll(".picture");
        $blurContainerArr.forEach((picture) => {
            imgArr.push(picture.children[0]);
        });

        const loaded = (img) => {
            img.style.opacity = 1;
        };

        imgArr.forEach((img) => {
            if (img.complete) {
                loaded(img);
            } else {
                img.addEventListener("load", () => {
                    loaded(img);
                });
            }
        });

        if (window.screen.availWidth <= 480) {
            $image1.style.display = "none";
            $image2.style.display = "none";
            $image3.style.display = "none";
            $image4.style.display = "none";
        }
    });
</script>
