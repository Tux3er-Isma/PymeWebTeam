---
import { Image } from 'astro:assets';
const { source, numPh, title, order } = Astro.props;
---

<div class="picture">
    <img src={source} height="337" class="picture__img" data-order={order}>
    <div class="picture__overlay"></div>
    <div class="picture__text-container">
        <h4 class="picture__text-container__subtitle">{numPh} fotos</h4>
        <h3 class="picture__text-container__title">{title}</h3>
    </div>
</div>

<style lang="scss">
    .picture {
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 337px;
        transition: all .5s;

        .picture__img {
            object-fit: cover;
            height: 100%;
            transition: all .51s;
        }

        .picture__overlay {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(transparent, #090909);
            opacity: 0;
            transition: opacity 0.5s;
        }

        &:hover .picture__overlay {
            cursor: pointer;
            opacity: 0.8;
        }

        &:hover .picture__img{
            cursor: pointer;
            transform: scale(1.3);
        }

        .picture__text-container {
            position: absolute;
            bottom: 20px;
            left: 20px;
            font-family: 'Poppins', sans-serif;

            &__subtitle {
                font-weight: 100;
                font-size: 12px;
                opacity: .38;
            }

            &__title {
                font-weight: lighter;
                font-size: 18px;
            }
        }
    }

    @media only screen and (max-width: 480px){
        [data-order="one"]{
            width: 100vw;
        }

        [data-order="three"]{
            width: 50vw;
        }

        .picture{
            height: 200px;

            .picture__img{
                height: 200px;
            }

            &:hover .picture__img{
                transform: scale(1.1);
            }

            .picture__text-container{
                left: 20px;
            }
        }
    }
</style>
