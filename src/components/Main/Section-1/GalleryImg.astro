---
import { Image } from "astro:assets";
const { source, numPh, title, order, imgNum, imgsArr, titleG } = Astro.props;
import ImgLoader from "../../Loader/ImgLoader.astro";
---

<div class="gallery">
    {imgsArr.map((source, index) =>(
        <a href={source}></a>
    ))}
    <a class="picture" href={source.src}>
        <ImgLoader></ImgLoader>
        <Image
            src={source}
            alt="PymeWebTeam"
            class={"picture__img"}
            data-order={order}
            aria-hidden={true}
            loading={"lazy"}
            quality={"mid"}
        />
        <div class="picture__overlay"></div>
        <div class="picture__text-container">
            <h4 class="picture__text-container__subtitle">{numPh} fotos</h4>
            <h3 class="picture__text-container__title">{title}</h3>
            <h3 class="picture__text-container__title--g">{titleG}</h3>
        </div>
    </a>
</div>

<style lang="scss">
    [data-small="1"] {
        background-image: url("../../../assets/img-small-1.png");
    }

    [data-small="2"] {
        background-image: url("../../../assets/img-small-2.png");
    }

    [data-small="3"] {
        background-image: url("../../../assets/img-small-3.jpg");
    }

    [data-small="4"] {
        background-image: url("../../../assets/img-small-4.png");
    }

    [data-small="5"] {
        background-image: url("../../../assets/img-small-5.png");
    }

    [data-small="6"] {
        background-image: url("../../../assets/img-small-6.png");
    }

    .picture {
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 337px;
        transition: all 0.5s;
        // background-image: url("../../../assets/img-small-3.jpg");
        background-size: cover;
        background-position: center;

        .picture__img {
            object-fit: cover;
            height: 100%;
            width: 100%;
            opacity: 0;
            transition: all 0.5s;
        }

        .picture__overlay {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(transparent, #090909);
            opacity: 0;
            transition: opacity 0.5s;
        }

        &:hover .picture__overlay {
            cursor: pointer;
            opacity: 0.8;
        }

        &:hover .picture__img {
            cursor: pointer;
            transform: scale(1.3);
        }

        .picture__text-container {
            position: absolute;
            bottom: 20px;
            left: 20px;
            font-family: "Poppins", sans-serif;

            &__subtitle {
                font-weight: 100;
                font-size: 12px;
                opacity: 0.38;
            }

            &__title {
                font-weight: lighter;
                font-size: 18px;

                &--g{
                    text-shadow: 1px 1px 1px 1px #8b8b8b;
                }
            }
        }
    }

    @media only screen and (max-width: 480px) {
        [data-order="one"] {
            width: 100vw;
        }

        [data-order="three"] {
            width: 50vw;
        }

        .picture {
            height: 200px;

            .picture__img {
                height: 200px;
            }

            &:hover .picture__img {
                transform: scale(1.1);
            }

            .picture__text-container {
                left: 20px;
            }
        }
    }
</style>
