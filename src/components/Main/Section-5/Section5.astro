        }

        // Event listener for left arrow
        leftArrow.addEventListener('click', function () {
            currentPhraseIndex = (currentPhraseIndex === 0) ? phrases.length - 1 : currentPhraseIndex - 1;
            updatePhrase();
        });

        // Event listener for right arrow
        rightArrow.addEventListener('click', function () {
            currentPhraseIndex = (currentPhraseIndex === phrases.length - 1) ? 0 : currentPhraseIndex + 1;
            updatePhrase();
        });

        // Initial phrase display
        updatePhrase();
    })
</script>
