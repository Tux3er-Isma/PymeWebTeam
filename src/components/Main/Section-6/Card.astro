---
import { Image } from "astro:assets";
const { profile, name, opinion } = Astro.props;
import Star from "../../../assets/main/section6/Star.png";
---

<div class="card">
    <header class="card__header">
        <Image
            src={profile}
            alt="PymeWebTeam"
            class={"card__header__icon"}
            aria-hidden={true}
            loading={"lazy"}
            quality={"mid"}
        />
        <h2 class="card__header__name">{name}</h2>
        <div class="card__header__stars-container">
            <img src={Star.src} alt="PymeWebTeam" class="card__header__stars-container__stars">
            <img src={Star.src} alt="PymeWebTeam" class="card__header__stars-container__stars">
            <img src={Star.src} alt="PymeWebTeam" class="card__header__stars-container__stars">
            <img src={Star.src} alt="PymeWebTeam" class="card__header__stars-container__stars">
            <img src={Star.src} alt="PymeWebTeam" class="card__header__stars-container__stars">
        </div>
    </header>
    <p class="card__opinion">{opinion}</p>
</div>

<style lang="scss">
    .card{
        background-color: #fff;
        color: #000;
        width: 27vw;
        border-radius: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
        padding-bottom: 20px;
        gap: 10px;

        &__header{
            width: 90%;
            display: flex;
            align-items: center;

            &__name{
                margin-left: 20px;
                color: #0094FF;
                font-weight: 500;
            }

            &__stars-container{

                &__stars{
                    width: 15px;
                }
            }
        }

        &__opinion{
            width: 90%;
            font-family: 'Poppins', sans-serif;
        }
    }

    @media only screen and (max-width: 480px){
        .card{
            width: 85vw;
        }
    }
</style>