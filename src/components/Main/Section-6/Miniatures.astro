---
const { source, title, subtitle } = Astro.props;
---

<div class="box">
    <img src={source} alt="PymeWebTeam" class="box__img">
    <div class="box__txt-container">
        <h1 class="box__txt-container__title">{title}</h1>
        <h2 class="box__txt-container__subtitle">{subtitle}</h2>
    </div>
</div>

<style lang="scss">
    .box{
        width: 300px;

        &__txt-container{
            border: 1px solid #fff;
            background-color: #101010;
            font-family: 'Poppins', sans-serif;

            &__title{
                font-size: 20px;
            }

            &__subtitle{
                font-size: 12px;
                color: #747474;
            }
        }
    }
</style>